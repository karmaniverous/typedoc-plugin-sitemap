{
  "entry": ["src/**/index.ts"],
  "ignoreDependencies": [
    "@types/mocha",
    "auto-changelog",
    "chai",
    "@types/chai",
    "jsdom-global",
    "mocha",
    "source-map-support",
    "ts-node"
  ],
  "mocha": {
    "entry": ["*/**/*.test.!(*.*)"]
  },
  "project": ["*/**", "!docs/**"],
  "rules": {
    "exports": "off",
    "types": "off"
  }
}
